{
  "manifest_version": 3,
  "name": "Echo-Sign: Real-Time ISL Mirror",
  "version": "1.0.0",
  "description": "Real-time Indian Sign Language interpreter for deaf and hard-of-hearing students.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "tabCapture",
    "offscreen",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "src/*", "offscreen.html", "offscreen.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
